.condition {
  padding: 15rpx;
  display: flex;
  flex-flow: row wrap;
}

.condition view {
  margin: 11rpx;
  width: 120rpx auto;
  padding: 10rpx 21rpx 10rpx 21rpx;
  font-size: 14px;
  border: 0.5rpx solid whitesmoke;
  border-radius: 4rpx;
  background-color: #fcfcfc;
}

.condition .ope {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-end;
  flex-grow: 2;
  padding: 0;
  background-color: transparent;
  border: 0;
}
.tab-content{
  margin-bottom: 60rpx;
}
.tab-h {
  margin-top: 10rpx;
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
  /* position: fixed; */
  top: 0;
  z-index: 99;
  text-align: center;
}

.tab-item {
  margin: 0 80rpx;
  display: inline-block;
}

.tab-item.active {
  color: #efb336;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 52rpx;
  background: #efb336;
  position: absolute;
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;
}
