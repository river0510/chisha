.title {
  width: 100%;
  height: 50rpx;
  /* margin-left: 80rpx; */
  margin-top: 30rpx;
  font-family: "微软雅黑";
  text-align: center;
}

.title-text {
  font-size: 16px;
  font-weight: 300;
  /* letter-spacing: 3rpx; */
  color: grey;
}

.tab-h {
  margin-top: 10rpx;
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 18px;
  white-space: nowrap;
  /* position: fixed; */
  top: 0;
  z-index: 99;
  text-align: center;
}

.tab-item {
  margin: 0 100rpx;
  display: inline-block;
}

.tab-item.active {
  color: #efb336;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 52rpx;
  background: #efb336;
  position: absolute;
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;
}

.item-ans {
  width: 84%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: center;
  box-sizing: border-box;
  height: 200rpx;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
  margin: auto;
  margin-top: 15rpx;
  box-shadow: 3px 3px 40px whitesmoke;
  background-color: white;
  /* border: 1px solid whitesmoke; */
  border-radius: 9rpx;
}

.avatar {
  width: 195rpx;
  height: 196rpx;
  position: relative;
  margin-right: 30rpx;
  background-color: #f9f6e8;
  border-radius: 6px 0 0 6px;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 6px 0 0 6px;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 11px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
  font-weight: 200;
  letter-spacing: 2rpx;
  /* margin-top: -40rpx; */
}

.expertInfo .name {
  font-size: 17px;
  color: #000;
  margin-bottom: 6px;
  font-weight: 200;
}

.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 16px;
  font-weight: 200;
  /* border-radius: 60rpx; *//* border: 1px solid #efb336; */
  color: #efb336;
  margin-right: 7rpx;
}

