page {
  display: flex;
  justify-content: center;
  align-items: center;
}

.outline {
  border: 0.5rpx solid whitesmoke;
  border-radius: 14rpx;
  background-color: white;
  width: 90%;
  height: 98%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  box-shadow: 4px 4px 15px gainsboro;
}

.pick {
  position: absolute;
  height: 50rpx;
  width: 48rpx;
  right: 73rpx;
  top: 70rpx;
  font-size: 12px;
  font-weight: 200;
  border-radius: 6rpx;
  padding: 10rpx;
  color: #efb336;
  text-align: center;
  letter-spacing: 3rpx;
}
.heart{
  height: 50rpx;
  width: 50rpx;
}

.info {
  display: flex;
  width: 80%;
  height: 100%;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 50rpx;
}

.mainpic {
  width: 300rpx;
  height: 300rpx;
  border-radius: 350rpx;
  margin-left: -40rpx;
  background-color: #fefcf7;
}

.maintitle .storeName {
  margin-top: 40rpx;
  font-weight: 100;
  font-size: 21px;
  letter-spacing: 3rpx;
}

.maintitle .times {
  font-weight: 200;
  font-size: 16px;
  color: #efb336;
  letter-spacing: 3rpx;
  margin-top: 10rpx;
}

.otherInfo {
  margin-top: 30rpx;
  font-weight: 200;
  font-size: 13px;
  letter-spacing: 1;
}

.otherInfo image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.otherInfo view {
  margin-top: 15rpx;
  display: flex;
  flex-wrap:nowrap;
}

.otherInfo .main-line {
  margin: 30rpx 0 30rpx 0;
  height: 1rpx;
  width: 90%;
  background-color: whitesmoke;
}

.menu {
  width: 520rpx;
  height: 170rpx;
  margin: 30rpx 0 50rpx 0;
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
}

.menu image {
  width: 240rpx;
  height: 180rpx;
  margin-right: 10rpx;
}
